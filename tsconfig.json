{
    "include": ["./src/**/*.ts"],
    "exclude": ["./node_modules/**"],
    "compilerOptions": {
        "target": "es2021",
        "module": "commonjs",
        "composite": true,
        "declaration": true,
        "noImplicitAny": true,
        "noImplicitReturns": true,
        "outDir": "./out",
        "rootDir": ".",
        "sourceMap": true,
        "strict": true
    }
}
