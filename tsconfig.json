{
    "include": ["./src/**/*.ts"],
    "exclude": ["./node_modules/**"],
    "compilerOptions": {
        "target": "es2021",
        "module": "commonjs",
        "composite": true,
        "declaration": true,
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "noImplicitAny": true,
        "noImplicitReturns": true,
        "outDir": "./out",
        "rootDir": "./src",
        "skipLibCheck": true,
        "sourceMap": true,
        "strict": true,
        "tsBuildInfoFile": "./out/blob.tsbuildinfo"
    }
}
